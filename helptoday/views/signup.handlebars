
<script>
    $(document).ready(function()
    {
        $('.ui.form').form(
        {
            fields :
            {
                email :
                {
                    identifier : 'email',
                    rules :
                    [
                    {
                        type : 'empty',
                        prompt : 'Please enter your e-mail'
                    },
                    {
                        type : 'email',
                        prompt : 'Please enter a valid e-mail'
                    } ]
                },
                password :
                {
                    identifier : 'password',
                    rules :
                    [
                    {
                        type : 'empty',
                        prompt : 'Please enter your password'
                    },
                    {
                        type : 'length[4]',
                        prompt : 'Your password must be at least 4 characters'
                    } ]
                }
            }
        });
    });
</script>


<div class="pusher">

    {{> header_nologin}}
    
    
    <div class="ui basic vertical padding segment"></div>


    <div class="ui basic vertical segment">
        <img class="ui centered image" src="/images/helptoday_logo_large.png">
    </div>
    <div class="ui basic padded segment"></div>
    
    
    
    <div class="ui basic vertical segment">
    
        <div class="ui one column centered stackable grid container">
    
            <div class="eight wide column">
    
                <form action="/signup" method="POST" class="ui form">
    
                    {{#if message}}
                    <div class="ui attached negative message">
                        <div class="header">Hallo {{ user.us_nickname }}</div>
                        <p>{{ message }}</p>
                    </div>
                    {{else}}
                    <div class="ui attached message">
                        <div class="header">Willkommen</div>
                        <p>Super, dass du dich registrieren möchtest. Gib bitte hier deine eMail Adresse und ein Password ein.</p>
                    </div>
                    {{/if}}
    
                    <div class="ui attached segment">
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="user icon"></i> <input type="text" name="email" placeholder="E-mail address">
                            </div>
                        </div>
                        <div class="field">
                            <div class="ui left icon input">
                                <i class="lock icon"></i> <input type="password" name="password" placeholder="Password">
                            </div>
                        </div>
                        <div class="ui blue submit button">Registrieren</div>
                        <div class="ui error message"></div>
                    </div>
    
    
                </form>
    
            </div>
    
    
            <div class="ui horizontal divider">Oder</div>
    
    
        <p>Zurück zur <a href="/login">Login</a> Seite</p>
    
    
        </div>
    </div>
    
    <div class="ui basic segment"></div>
    
</div>


{{> footer}}
