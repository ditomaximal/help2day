    <div class="ui basic segment">    </div>
    <div class="ui basic segment">    </div>

    <div class="ui basic vertical center aligned segment">

        <div class="ui one column stackable grid container">
    
            <div class="ui row">
                <div class="ui eleven wide centered column">
                    
