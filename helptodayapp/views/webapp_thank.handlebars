<script type="text/javascript">
$(document).ready(function() 
{
    
    var fields = $('.thank-helper-container');
    var container = $('#thank-user-container'); 
    var width = container.width(); 
    var height = container.height();
    var angle = (1.5*Math.PI);
    var step = (1.4*Math.PI) / fields.length;
    var radius = height*0.95;
    var timeout= 0;
    
    console.log('DEBUG: radius ' + radius + ' width ' + width );
    
    fields.each(function() {
        var x = Math.round(width/2 + radius * Math.cos(angle) - $(this).width()/2);
        var y = Math.round(radius + radius * Math.sin(angle) - $(this).height()/2);
        var div= this;
        
        if(window.console) 
            console.log(angle, x, y);
        $(this).css({
            left: x + 'px',
            top: y + 'px'
        });
        angle += step;

        timeout+= 200;
        setTimeout(function(){
            $(div).fadeIn();
        },timeout);

        
    });    

    
});
</script>



